digraph G {

   node [shape=box]
   start [shape=doublecircle]
   end [shape=circle]

   // WTF! the word "cluster" is important!
	subgraph cluster_0 {
		label = "process #1";

      // first node mention must be inside it's cluster
      // but linkages can be anywhere
      a0 a1 a2 a3
	}

	subgraph cluster_1 {
		label = "process #2";
		b0 -> b1 -> b2 -> b3;

      // cluster 0's linkages
      a0 -> a1
      a1 -> a2
      a2 -> a3
	}

   // linkages here can be nodes _anywhere_
	start -> a0;
	start -> b0;
	a1 -> b3;
	b2 -> a3;
	a3 -> a0;
	a3 -> end;
	b3 -> end;
}
